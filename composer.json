{
    "name": "tu6ge/laravel-form-item",
    "description": "laravel form item",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "tu6ge",
            "email": "772364230@qq.com"
        }
    ],
    "require": {
		"php":"^7.3 || ^7.4 || ^8",
		"ext-mbstring":"*",
        "pascaldevink/shortuuid": "^3"
    },
    "require-dev": {
		"ext-zip":"*",
		"ext-curl":"*",
        "phpunit/phpunit": "^9.4",
        "laravel/framework": "^7 || ^8",
        "orchestra/testbench": "^6.4",
        "orchestra/testbench-browser-kit": "^6.2",
        "orchestra/testbench-dusk": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "LaravelFormItem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelFormItem\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelFormItem\\Providers\\LaravelFormItemServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=Unit",
        "test-browser": "phpunit --testsuite=Browser",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
    }
}
